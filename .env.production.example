APP_NAME=Comparix
APP_ENV=production
APP_KEY=base64:SCHIMBA_CU_APP_KEY_GENERAT
APP_DEBUG=false
APP_URL=https://comparix.ro

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (MySQL/PostgreSQL pentru produc»õie)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=comparix
DB_USERNAME=comparix
DB_PASSWORD=parola_sigura_aici

# Cache / Session / Queue (Redis recomandat)
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
